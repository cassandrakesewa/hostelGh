
<div class="row">
	<div class="col-md-2 side-bar ">
		<ul class="nav nav-side">
			<li><i class="fa fa-home"></i> Dashboard</li>
			<li><i class="fa fa-plus"></i> Create Hostel</li>
			<li><i class="fa fa-list"></i> List Hostel</li>
		</ul>
	</div>

	<div class="side-content col-lg-10">

		<div class="col-md-12">

			<div class="panel panel-default">
				<div class="panel-heading dark-grey">Register Hostel </div>

				<div class="panel-body">
					<%= form_for @hostel, :url=> {:action => "create" }, :html => { :method => :post, :multipart => true} ,  :class => 'panel-heading dark-grey' do |f| %>

					<% if @hostel.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@hostel.errors.count, "error") %> prohibited this hostel from being saved:</h2>

						<ul>
							<% @hostel.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
					<% end %>

					<div class="form-group col-lg-12">
						<%= f.label :name %><br>
						<%= f.text_field :name , :class => 'form-control'%>
					</div>

					<div class="form-group col-lg-6">
						<%= f.label :location %><br>
						<%= f.text_field :location , :class => 'form-control'%>
					</div>
					<div class="form-group col-lg-6">
						<%= f.label :facilities %><br>
						<%= f.text_field :facilities , :class => 'form-control' %>
					</div>
					
					<div class="form-group col-lg-6">
						<%= f.label :email %><br>
						<%= f.email_field :email , :class => 'form-control'%>
					</div>
					<div class="form-group col-lg-6">
						<%= f.label :contact %><br>
						<%= f.text_field :contact , :class => 'form-control'%>
					</div>
					<div class="form-group col-lg-6">
						<%= f.label :Hostel_type %><br>
						<%= f.text_field :hostel_type , :class => 'form-control'%>
					</div>
					<div class="form-group col-lg-6">
						<%= f.label :picture %><br>
						<%= f.file_field :picture , :class => 'form-control'%>
					</div>

					<div class="form-group col-lg-12">
						<%= f.label :rules %><br>
						<%= f.text_area :rules , :class => 'form-control'%>
					</div>

					<div class="actions form-group col-lg-6">
						<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" onclick="populateModal()">Done</button>
					</div>

					<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="z-index: 1500;">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
									<h4 class="modal-title" id="myModalLabel"></h4>
								</div>
								<div class="modal-body">

									<!-- Show Page after saving a hostel -->
									<div row>
										<div class="col-md-12 image">
											<img src="http://placehold.it/540x250" id="hostel-image" class="img-responsive" alt="...">
										</div>
										<div class="col-md-12">
											<div class="panel panel-default">
												<div class="panel-heading dark-grey">Are the Info Right?</div>
												<div class="panel-body">
													<div class="col-md-6 location">
														<p><b>Location:</b><br/>
															<span id="myModalLocation"> </span> </p>

															<p><b>Hostel-Type:</b> <br/> 
																<span id="myModalType"> </span></p>

															</div>
															<div class="col-md-6">
																<p><b>Email:</b><br/> <span id="myModalEmail"></span> </p>

																<p><b>Contact:</b><br/> <span id="myModalNumber"></span></p>
															</div>

														</div>
														<div class="rules">
															<div class="col-md-6 facilities">
																<p><b>Hostel Rules:</b><br/> <span id="myModalRules"></span> </p>

															</div>
															<div class="col-md-6 ">
																<p><b> Facilities:</b><br/>
																	<span id="MyModalFacilities"></span>
																</p> 

															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
											<button type="submit" class="btn btn-primary" >Create Hostel</button>
										</div>
									</div>
								</div>
							</div>


							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>



